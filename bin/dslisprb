#!/usr/bin/env ruby
require "dslisprb"

dslisp = DsLisp.new
if ARGV[0]
  if ARGV[0] == '--help'
    print "
  dslisprb --help
    show this message
  dslisprb <lisp expression>
    evaluate lisp expression, shows the result on standard output and exit

    Example:
      dslisprb \"(cdr '(1 2 3))\"
      (2 3)

  dslisprb without arguments starts the repl
"

  else
    # execute and exit
    print dslisp.evaluate(ARGV[0]).lisp_inspect,"\n"
  end
else
  # repl
  require 'readline'
  print "enter lisp commands or quit to exit\n"

  stty_save = `stty -g`.chomp
  trap('INT') { system('stty', stty_save); exit }

  Readline.completion_append_character = " "
  Readline.completion_proc = proc do |s|
    (dslisp.variables + ["quit", "load"]).grep( /^#{Regexp.escape(s)}/ )
  end

  while cmd = Readline.readline('> ', true)
    begin
      if cmd.split.first == "quit"
        exit
      elsif cmd.split.first == "load"
        filename = cmd.split[1]
        print dslisp.evaluate(File.open(filename).read.gsub("\n","")).lisp_inspect,"\n"
      else
        print dslisp.evaluate(cmd).lisp_inspect,"\n"
      end
    rescue SystemExit => e
      raise e    
    rescue Exception => e
      p e
      print e.backtrace.join("\n"),"\n"
    end
  end
end
